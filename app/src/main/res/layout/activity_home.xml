<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"></FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_colors"
        app:itemTextColor="@drawable/nav_item_colors"
        android:id="@+id/bottom_nav"
        app:menu="@menu/bottom_nav"/>
    <!-- android:background="@color/colorPrimaryDark"-->
    <!-- android:background="#ffffff" -->

    <!-- By default, the selected icon has the primary app colour, the same as the
        app bar. This is also recommended by the material design guidelines so you
        shouldn't change that. If you want to change the colour of the bottom nav then
        you should change the colour of the icons and the text to either black or white.
        Depending from the colour you set to the background. -->

</RelativeLayout>