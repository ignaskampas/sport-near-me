<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_receiver_message"
        android:text="receiver_message"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/colorBlack"
        android:background="@drawable/receiver_message_layout"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="visible"
        android:id="@+id/tv_sender_message"
        android:text="sender_message"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/colorBlack"
        android:background="@drawable/sender_message_layout"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>